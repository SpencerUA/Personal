  <script>
    function runABTest() {
      // Генерация случайного числа от 0 до 1
      var random = Math.random();
      
      // Разделение аудитории на две группы по условию случайного числа
      if (random < 0.5) {
        // Группа A - первая ссылка
        window.location.href = "https://1win.pro/bets/home";
      } else {
        // Группа B - вторая ссылка
        window.location.href = "https://slotoking.ua/";
      }
    }
  </script>
